{% extends 'base.parent.html.twig' %}

{% block title %}Voir les notes
{% endblock %}

{% block body %}
	<br><br>
	<div class="container">
		<h2>Liste des notes de {{ eleve.nom ~ eleve.prenom }}</h2>
		<div class="row">
			<div class="col-12">
				<table id="example" class="table table-striped table-bordered " style="width:100%">
					<thead>
						<tr>
							<td>Matiere</td>
							<td>Note</td>
                            <td></td>
						</tr>
					</thead>
					{% for note in notes %}
						<tbody>
							<td>{{ note.matiere }}</td>
							<td>{{ note.note }}</td>
						</tbody>
					{% endfor %}
				</table>
			</div>
		</div>
	</div>
{% endblock %}
