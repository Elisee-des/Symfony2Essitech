{% extends 'base.ecole.html.twig' %}

{% block title %}Gestion des classes
{% endblock %}

{% block body %}
	<br><br>
	<div class="container">
		<a href="{{ path("ecole_classe_ajout") }}" class="btn btn-primary float-right">Ajouter un classe</a>
		<div class="row">
			<div class="col-12">
				<table id="example" class="btnEdit table table-striped table-bordered" style="width:100%">
					<thead>
						<tr>
							<td>Nom</td>
							<td>Action</td>
						</tr>
					</thead>
					<tbody>
						{% for classe in classes %}

							<tr>
								<th>{{classe.nom}}</th>
								<th>
									<a href="{{ path("ecole_classe_modifier", {id: classe.id}) }}" class="btn btn-primary">Modifier</a>
									<a href="{{ path("ecole_classe_delete", {id: classe.id}) }}" class="btn btn-danger" onclick="return confirm('Etes vous sur de vouloir supprimer cette classe ?')">Supprimer</a>
								</th>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
